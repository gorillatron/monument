
<section class="podcast-edit-form">

  <div class="field title">
    {{input type="text" value=model.name size="50"}}
  </div>

  <div class="field content">
    {{textarea value=model.content}}
  </div>

  <div class="actions">
    <ul class="list-inline left">

      <li>
        <button type="button" class="btn btn-success" {{action 'save' model}}>Save</button>
      </li>

      <li>
        <a class="preview" {{bind-attr href="previewHref"}} target="_blank">
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        </a>
      </li>

      <li>
        <a class="help" href="http://daringfireball.net/projects/markdown/basics" target="_blank">
          <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
        </a>
      </li>

    </ul>
  </div>

</section>