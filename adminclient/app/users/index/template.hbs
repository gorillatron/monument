
<div class="row user-list list">

  <header class="col-sm-12 row">

    <div class="col-sm-3 title">
      <h3>Users</h3>
    </div>

  </header>

  {{#if controller.generatedCsv}}
    <div style="margin: 15px 0px; border: 1px solid rgb(200,200,200); padding: 15px;">
      {{controller.generatedCsv}}
    </div>
  {{/if}}

  <button {{action 'generateCsv' 'phoneNumber'}}>CSV: telefon</button>
  <button {{action 'generateCsv' 'email'}}>CSV: epost</button>

  <div class="col-sm-12 row table-wrapper">
    <section class="col-sm-12 data-table">

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Role</th>
            <th>News subscriber</th>
            <th></th>
          </tr>
        </thead>
        <tbody>

          {{#each user in controller}}
            <tr>
              <td>
                {{#link-to 'user.edit' user.model}} {{user.model.name}} {{/link-to}}
              </td>
              <td>{{user.model.phoneNumber}}</td>
              <td>{{user.model.email}}</td>
              <td>{{user.model.role}}</td>
              <td>{{user.displaySubscriptionBoolean}}</td>
              <td>
                <button type="button" class="btn btn-danger btn-sm" {{action 'destroy' user}}>delete</button>
              </td>
            </tr>
          {{/each}}

          <tr>
            <td colspan="6" class="create">
              {{#link-to 'user.create'}}
              <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
              {{/link-to}}
            </td>
          </tr>

        </tbody>
      </table>

    </section>
  </div>

</div>