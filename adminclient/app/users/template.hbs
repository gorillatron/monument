<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    {{#each user in controller}}
      <tr>
        <td>
          {{#link-to 'user' user}} {{user.name}} {{/link-to}}
        </td>
        <td>{{user.phoneNumber}}</td>
        <td>{{user.email}}</td>
        <td>{{user.role}}</td>
        <td>
          <button type="button" class="btn btn-danger btn-sm" {{action 'destroy' user}}>delete</button>
          <button type="button" class="btn btn-danger btn-sm" {{action 'lolat' user}}>lolat</button>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>
